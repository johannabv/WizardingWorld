@page
@model WizardingWorld.Pages.CurrenciesPage

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create" asp-page-handler="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Items[0].Code) </th>
            <th> @Html.DisplayNameFor(model => model.Items[0].EnglishName) </th>
            <th> @Html.DisplayNameFor(model => model.Items[0].NativeName) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.Code) </td>
            <td> @Html.DisplayFor(modelItem => item.EnglishName) </td>
            <td> @Html.DisplayFor(modelItem => item.NativeName) </td>
            <td>
                <a asp-page="./Edit" asp-page-handler="Edit" asp-route-id="@item.ID">Edit</a> 
                <a asp-page="./Details" asp-page-handler="Details" asp-route-id="@item.ID">Details</a> 
                <a asp-page="./Delete" asp-page-handler="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
