@page
@model WizardingWorld.Pages.Party.SpellsPage
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Mvc.Rendering
@using WizardingWorld.Pages
@using WizardingWorld.Pages.Extensions
@{
    Layout="_Index";
}
<body>
<table class="table">
    <thead>
        <tr>
            <th> @Html.TabHider(nameof(Model.Item.SpellName)) </th>   
            <th> @Html.TabHider(nameof(Model.Item.Description)) </th> 
            <th> @Html.TabHider(nameof(Model.Item.Type)) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.SpellName) </td>
            <td> @Html.DisplayFor(modelItem => item.Description) </td>
            <td> @Html.DisplayFor(modelItem => item.Type) </td>
            <td>
                <a asp-page="./Edit" 
                   asp-page-handler="Edit" 
                   asp-route-id="@item.ID"
                   asp-route-sortOrder="@Model.CurrentSort"
                   asp-route-pageIndex="@Model.PageIndex" 
                   asp-route-currentFilter="@Model.CurrentFilter"
                >Edit</a>&nbsp; 
                <a asp-page="./Details" 
                   asp-page-handler="Details" 
                   asp-route-id="@item.ID"
                   asp-route-sortOrder="@Model.CurrentSort"
                   asp-route-pageIndex="@Model.PageIndex" 
                   asp-route-currentFilter="@Model.CurrentFilter"
                >Details</a>&nbsp; 
                <a asp-page="./Delete" 
                   asp-page-handler="Delete" 
                   asp-route-id="@item.ID"
                   asp-route-sortOrder="@Model.CurrentSort"
                   asp-route-pageIndex="@Model.PageIndex" 
                   asp-route-currentFilter="@Model.CurrentFilter"
                >Delete</a>&nbsp;
            </td>
        </tr>
}
    </tbody>
</table>
</body>
