@page
@model WizardingWorld.Pages.Party.CharactersPage

@{
    Layout="_Index";
}
<body>
<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Items[0].FirstName) </th>
            <th> @Html.DisplayNameFor(model => model.Items[0].LastName) </th>
            <th> @Html.DisplayNameFor(model => model.Items[0].Gender) </th>
            <th> @Html.DisplayNameFor(model => model.Items[0].DoB) </th>
            <th> @Html.DisplayNameFor(model => model.Items[0].HogwartsHouse) </th>
            <th> @Html.DisplayNameFor(model => model.Items[0].Organisation) </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Items) {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.FirstName) </td>
            <td> @Html.DisplayFor(modelItem => item.LastName) </td>
            <td> @Html.DisplayFor(modelItem => item.Gender) </td>
            <td> @Html.DisplayFor(modelItem => item.DoB) </td>
            <td> @Html.DisplayFor(modelItem => item.HogwartsHouse) </td>
            <td> @Html.DisplayFor(modelItem => item.Organisation) </td>
            <td>
                <a asp-page="./Edit" asp-page-handler="Edit" asp-route-id="@item.ID">Edit</a>&nbsp; 
                <a asp-page="./Details" asp-page-handler="Details" asp-route-id="@item.ID">Details</a>&nbsp; 
                <a asp-page="./Delete" asp-page-handler="Delete" asp-route-id="@item.ID">Delete</a>&nbsp;
            </td>
        </tr>
}
    </tbody>
</table>
</body>
